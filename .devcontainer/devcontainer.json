{
    "name": "IoTSim Replay Simulator",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {}
    },
    "forwardPorts": [
        3000,
        3001,
        8000
    ],
    "postCreateCommand": "pip install -r requirements.txt && cd web && npm install",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ]
        }
    }
}